{
  "version": "2.1.0-*",
  "title": "UniversalGrid",
  "description": "A simple, stand-alone library for managing objects within a 2 dimensional grid",
  "language": "en-GB",
  "authors": [ "R Eyres" ],
  "packOptions": {
    "projectUrl": "https://github.com/roberino/UniversalGrid",
    "tags": [ "grid collections cartesian coordinates spatial" ],
    "licenseUrl": "https://raw.githubusercontent.com/roberino/UniversalGrid/master/LICENSE",
    "repository": {
      "type": "git",
      "url": "git://github.com/roberino/UniversalGrid"
    }
  },
  "frameworks": {
    "net45": {
      "frameworkAssemblies": {
        "System.Xml": "",
        "System.Xml.Linq": ""
      }
    },
    "net461": {
      "frameworkAssemblies": {
        "System.Xml": "",
        "System.Xml.Linq": ""
      }
    },
    "netstandard1.6": {
      "imports": "dnxcore50",
      "dependencies": {
        "System.Collections": "4.0.11",
        "System.Diagnostics.Contracts": "4.0.1",
        "System.IO": "4.1.0",
        "System.Linq": "4.1.0",
        "System.Linq.Expressions": "4.1.0",
        "System.Reflection": "4.1.0",
        "System.Resources.ResourceManager": "4.0.1",
        "System.Text.Encoding": "4.0.11",
        "System.Runtime": "4.1.0",
        "System.Runtime.Extensions": "4.1.0",
        "System.Threading": "4.0.11",
        "System.Threading.Tasks": "4.0.11",
        "System.Xml.ReaderWriter": "4.0.11",
        "System.Xml.XDocument": "4.0.11"
      }
    }
  },
  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration% --output ..\\..\\artifacts"
    ]
  }
}